
public class CompareFileSize implements Comparable {

	// Constructor
	public CompareFileSize() {
		super();
	}
	
	@Override
	public int compareTo(Object o1, Object o2) {
		FileInfo f1 = (FileInfo) o1;
		FileInfo f2 = (FileInfo) o2;
		
		if (f1.getSize() > f2.getSize()) {
			return 1;
		}
		else {
			return 0;
		}
	}
}

